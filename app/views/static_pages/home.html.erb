<% provide :title, t(".page_name") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-7">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-6">
      <h3><%= t ".feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t ".title" %></h1>
    <h3><%= t ".author" %> : <%= t ".full_name" %></h3>
    <p>
      Facebook :
      <%= link_to t(".full_name"), "http://www.facebook.com/tuquyet.hedspi" %>
      <p><%= l Time.now, format: :short %></p>
    </p>
    <%= link_to t(".sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
